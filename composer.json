{
  "name": "koriym/dii",
  "description": "Dependency Injection Plugin for Yii 1",
  "require": {
    "php": ">=7.1.0",
    "yiisoft/yii": "1.1.*",
    "ray/di": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^4.3",
    "doctrine/coding-standard": "^8.2",
    "phpmd/phpmd": "^2.9",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/process": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "Koriym\\Dii\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Koriym\\Dii\\": [
        "demo/src/",
        "tests/"
      ]
    },
    "classmap": [
      "vendor/yiisoft/yii/framework/base/",
      "vendor/yiisoft/yii/framework/web/",
      "vendor/yiisoft/yii/framework/console/"
    ]
  },
  "license": "MIT",
  "scripts": {
    "demo": "php -S 127.0.0.1:8080 -t demo/public",
    "test": ["phpunit"],
    "tests": ["@sa", "@cs", "@test"],
    "sa": "psalm --show-info=false",
    "cs": "phpcs --standard=./phpcs.xml src tests",
    "cs-fix": "phpcbf src tests"
  }
}
